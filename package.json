{
  "name": "chat-explorer",
  "version": "1.0.0",
  "description": "An Electron application for searching and browsing chat logs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oxidane-bot/telegram-chat-explorer.git"
  },
  "author": "Oxidane-bot",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "electron-winstaller": "^5.4.0",
    "dmg-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.chatexplorer.app",
    "productName": "Chat Explorer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/.{idea,git,cache,github,vscode}",
      "!**/{.DS_Store,.git,.gitignore,.npmignore}"
    ]
  }
}